<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PullMenuView">

        <!-- The class to use as a View's View Delegate. Can be relative path from app's package name -->
        <attr name="pmViewDelegateClass" format="reference|string" />

    </declare-styleable>

    <!-- The attribute to set in your Application/Activity theme to reference your custom theme -->
    <attr name="pmHeaderStyle" format="reference" />

    <declare-styleable name="PullMenuHeader">

        <!-- A drawable to use as the background of the Header View -->
        <attr name="pmHeaderBackground" format="reference|color" />

        <!-- The height of the Header View -->
        <attr name="pmHeaderHeight" format="reference|dimension" />

        <!-- The Text Appearance of the Header View's Title text -->
        <attr name="pmHeaderTitleTextAppearance" format="reference" />

        <!-- The color that the Progress Bar should be tinted with -->
        <attr name="pmProgressBarColor" format="reference|color" />

        <!-- The style of the Progress Bar -->
        <attr name="pmProgressBarStyle">
            <flag name="inside" value="0x0" />
            <flag name="outside" value="0x1" />
        </attr>

	    <!-- The height of the Progress Bar -->
	    <attr name="pmProgressBarHeight" format="reference|dimension" />

        <!--indeterminate progressbar style-->
        <attr name="pmSmoothProgressBarStyle" format="reference"/>
        </declare-styleable>
        
    
     <declare-styleable name="MenuSlidingTabStrip">
        <attr name="mstsIndicatorColor" format="color" />
        <attr name="mstsUnderlineColor" format="color" />
        <attr name="mstsDividerColor" format="color" />
        <attr name="mstsDividerWidth" format="dimension" />
        <attr name="mstsIndicatorHeight" format="dimension" />
        <attr name="mstsUnderlineHeight" format="dimension" />
        <attr name="mstsDividerPadding" format="dimension" />
        <attr name="mstsTabPaddingLeftRight" format="dimension" />
        <attr name="mstsScrollOffset" format="dimension" />
        <attr name="mstsTabBackground" format="reference" />
        <attr name="mstsShouldExpand" format="boolean" />
        <attr name="mstsTextAllCaps" format="boolean" />
        <attr name="mstsPaddingMiddle" format="boolean" />
        <attr name="mstsTextStyle">
            <flag name="normal" value="0x0" />
            <flag name="bold" value="0x1" />
            <flag name="italic" value="0x2" />
        </attr>
        <attr name="mstsTextSelectedStyle">
            <flag name="normal" value="0x0" />
            <flag name="bold" value="0x1" />
            <flag name="italic" value="0x2" />
        </attr>
        <attr name="mstsTextAlpha" format="float" />
        <attr name="mstsTextSelectedAlpha" format="float" />
    </declare-styleable>

</resources>